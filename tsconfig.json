{
  "compilerOptions": {
    "target": "ES6", // Specifies the target JavaScript version (ES6 in this case)
    "module": "es2022", // Specifies the module system (CommonJS for Node.js)
    "moduleResolution": "node", // Specifies module resolution strategy (Node.js)
    "outDir": "./dist", // Specifies the output directory for compiled files
    "rootDir": "./", // Specifies the root directory of input files
    "strict": true, // Enables all strict type-checking options
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing in file names
    "jsx": "react", // Specifies JSX code generation for React
    "allowSyntheticDefaultImports": true // Allows default imports from modules with no default export
  },
  "include": ["client/**/*.ts", "client/**/*.tsx", "vite-env.d.ts"],
  "exclude": ["node_modules"]
}
